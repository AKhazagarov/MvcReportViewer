<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/styles.css" rel="stylesheet" />
        <title>@ViewBag.Title</title>
    </head>
    <body>
        <nav>
            <ul>
                <li>@Html.ActionLink("Basic Interface", "Index", "Home")</li>
                <li>@Html.ActionLink("Fluent Interface", "Fluent", "Home")</li>
                <li>@Html.ActionLink("Post Report Parameters", "Post", "Home")</li>
                <li>@Html.ActionLink("Multiple Report Parameters", "Multiple", "Home")</li>
                <li>@Html.ActionLink("Excel Report", "DownloadExcel", "Home")</li>
                <li>@Html.ActionLink("Word Report (Multiple Values)", "DownloadWord", "Home")</li>
                <li>@Html.ActionLink("PDF Report", "DownloadPdf", "Home")</li>
                <li>@Html.ActionLink("Image Report", "DownloadImage", "Home")</li>
            </ul>
        </nav>
        <article>
            <section>
                <pre>
                    @RenderSection("Code", false)
                </pre>
            </section>
            <section>
                @RenderBody()
            </section>
        </article>
    </body>
</html>